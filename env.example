# ============================================================================
# A.D.R.I.A.N Environment Configuration
# Copy this file to .env and update with your settings
# ============================================================================

# Application Settings
APP_NAME=ADRIAN
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=adrian
POSTGRES_USER=adrian
POSTGRES_PASSWORD=your_secure_password_here

# Ollama Configuration (Local LLM)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=mistral:7b

# Google Gemini Configuration (Cloud LLM Fallback)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# Porcupine Configuration (Hotword Detection)
PICOVOICE_ACCESS_KEY=your_picovoice_access_key_here

# Service Ports
IO_SERVICE_PORT=8001
PROCESSING_SERVICE_PORT=8002
MEMORY_SERVICE_PORT=8003
EXECUTION_SERVICE_PORT=8004
SECURITY_SERVICE_PORT=8005
OUTPUT_SERVICE_PORT=8006

# Logging
LOG_DB_PATH=logs/adrian.db

# FAISS (Vector Store)
FAISS_INDEX_PATH=data/faiss_index
EMBEDDING_DIMENSION=384

